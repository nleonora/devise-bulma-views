<div class="container" style="display: flex; justify-content: center;">
  <div class="section column is-6">
    <h1 class="title">
      <%= t('.sign_up') %>
    </h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= bulma_devise_error_messages! %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'input' %>
        <% if @minimum_password_length %>
          <p class="help has-text-dark">
            <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
          </p>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'input' %>
      </div>
      <div class="field">
        <%= f.submit t('.sign_up'), class: 'button is-primary' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>