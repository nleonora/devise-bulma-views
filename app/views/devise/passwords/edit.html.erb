<div class="container" style="display: flex; justify-content: center;">
  <div class="section column is-6">
    <h1 class="title">
      <%= t('.change_your_password') %>
    </h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
      <%= bulma_devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, t('.new_password'), class: 'label' %>
        <%= f.password_field :password, autofocus: true, class: 'input' %>
        <% if @minimum_password_length %>
          <p class="help has-text-dark">
            <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
          </p>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input' %>
      </div>
      <div class="field">
        <%= f.submit t('.change_my_password'), class: 'button is-primary' %>
      </div>
      <%= render 'devise/shared/links' %>
    <% end %>
  </div>
</div>